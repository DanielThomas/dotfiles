# overrides for ls
alias ls="gls -F --color"
alias l="ls -lAh --color"
alias ll="ls -l --color"
alias la="ls -A --color"

# allow for common cd typo
alias cd..="cd .."

# sort top by CPU by default
alias top="top -o cpu"

alias tf="tail -f"

# Alias the_silver_searcher to the_platinum_searcher
alias ag=pt

# Atom
alias a=atom
